---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-facebook', url: '#' },
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-youtube', url: '#' }
];
---

<footer class="bg-[#DC143C] text-white py-8 border-t-4 border-[#FFD700]">
  <div class="container mx-auto px-4 text-center">
    <p class="text-xl font-bold mb-4">Stadium Spotlight</p>
    <p class="mb-4">&copy; {currentYear} Stadium Spotlight. All rights reserved.</p>
    <div class="flex justify-center gap-6 mt-4">
      {socialLinks.map((link) => (
        <a href={link.url} class="hover:text-[#FFD700] transition-colors duration-300">
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
  </div>
</footer>